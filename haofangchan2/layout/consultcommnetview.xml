<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/consultcommnet_topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#005b97"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/consultcommnet_goback"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/tuoyuan4"
            android:clickable="true" />

        <TextView
            android:id="@+id/consultcommnet_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="评论详情"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/consultcommnet_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ptr:ptrAnimationStyle="flip" />

</LinearLayout>