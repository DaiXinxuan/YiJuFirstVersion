<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:orientation="horizontal"
	    android:background="#005b97">   
		    <ImageButton 
		        android:id="@+id/scomment_title_btn"
		        android:layout_width="25dp"
		        android:layout_height="25dp"
		        android:layout_marginLeft="10dp"
		        android:layout_gravity="center_vertical"
		        android:background="@drawable/tuoyuan4"
				android:layout_centerVertical="true"
				android:clickable="true"
		        />
		    <TextView
		        android:id="@+id/scomment_title_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:layout_centerInParent="true"
		        android:text="评论"
		        android:textColor="#ffffff"
		        android:textSize="20sp" />
		    <TextView
		        android:id="@+id/scomment_title_save"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				android:layout_marginRight="10dp"
				android:clickable="true"
		        android:text="发表"
		        android:textColor="#ffffff"
		        android:textSize="19sp" />
	    </RelativeLayout>

		<LinearLayout 
		    android:layout_height="match_parent"
		    android:layout_width="match_parent"
		    android:padding="10dp"
		    android:background="#ebebeb">
			    <EditText
		        android:id="@+id/scomment_textfield"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:ems="10"
		        android:background="@drawable/profile_et1"
		        android:inputType="textMultiLine"
		        android:hint="填写评论内容"
		        android:textColor="#505050"
		        android:textSize="20sp"
		        android:gravity="top"
		        android:padding="5dp" >
	    		</EditText>
		</LinearLayout>
	    
		
</LinearLayout>
