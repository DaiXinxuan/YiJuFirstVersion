<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="15dp"
    android:orientation="horizontal" 
    android:background="#dedede" >
    <ImageView 
        android:id="@+id/house_image"
        android:layout_height="fill_parent"
        android:layout_width="80dp"
        android:src="@drawable/groupinfocar"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
	        android:id="@+id/house_id"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="编号(ID)：" 
	        android:textSize="13sp"
	        android:textColor="#505050"/>
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/house_area"
			    android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="面积:"
	            android:textSize="13sp"
	            android:textColor="#505050"/>
            <TextView 
                android:id="@+id/house_price"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
			    android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
				android:textSize="13sp"
	            android:text="价格:"
	            android:textColor="#505050"/>
            <TextView 
                android:id="@+id/house_scale"
                android:layout_below="@+id/house_area"
                android:layout_alignLeft="@+id/house_area"
                android:layout_marginTop="5dp"
			    android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="13sp"
	            android:text="尺寸:"
	            android:textColor="#505050"/>
            <TextView 
                android:id="@+id/house_status"
                android:layout_below="@+id/house_price"
                android:layout_alignLeft="@+id/house_price"
                android:layout_alignTop="@+id/house_scale"
			    android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
				android:textSize="13sp"
	            android:text="状态:"
	            android:textColor="#505050"/>
        </RelativeLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/house_info"
			    android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="说明:"
	            android:textSize="13sp"
	            android:textColor="#505050"/>
        </LinearLayout>
    </LinearLayout>
    

</LinearLayout>

