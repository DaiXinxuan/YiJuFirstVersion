<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#ffffff"
    android:orientation="vertical">

	<RelativeLayout 
	    android:layout_height="50dp"
	    android:layout_width="match_parent"
	    android:background="#005b97"
	    >
		<ImageView 
		    android:id="@+id/passwordlost_back"
		    android:layout_height="25dp"
		    android:layout_width="25dp"
		    android:clickable="true"
		    android:onClick="onClick"
		    android:layout_marginLeft="10dp"
		    android:layout_centerVertical="true"
		    android:src="@drawable/tuoyuan4"/>
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="找回密码"
	        android:textColor="#ffffff"
	        android:textSize="20sp" >
		</TextView>
	 </RelativeLayout>

	 <RelativeLayout
	     android:layout_width="match_parent"
	     android:layout_height="50dp" >

	     <TextView
	         android:id="@+id/textView1"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_centerVertical="true"
	         android:layout_marginLeft="15dp"
	         android:text="手机号:"
	         android:textSize="16sp"
	         android:textColor="#505050"
	          />

	     <EditText
	         android:id="@+id/passwordlost_numbers"
	         android:background="@layout/edittextwhihoutcorner"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
			 android:layout_toRightOf="@+id/textView1"
			 android:inputType="phone"
			 android:textColor="#505050"
	         android:hint="请输入手机号码"
	         android:singleLine="true"
	         android:layout_centerVertical="true"
	         android:ems="10" >
	     </EditText>
	     <ImageView 
	         android:layout_height="1dp"
	         android:background="#CCCCCC"
	         android:layout_width="match_parent"
	         android:layout_alignParentBottom="true"/>
	 </RelativeLayout>
	 	 <RelativeLayout
	     android:layout_width="match_parent"
	     android:layout_height="50dp" >

	     <TextView
	         android:id="@+id/textView2"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_centerVertical="true"
	         android:layout_marginLeft="15dp"
	         android:text="验证码:"
	         android:textColor="#505050"
	         android:textSize="16sp"
	         />

	     <EditText
	         android:id="@+id/passwordlost_code"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_centerVertical="true"
	         android:layout_toRightOf="@+id/textView2"
	         android:background="@layout/edittextwhihoutcorner"
	         android:ems="6"
	         android:inputType="number"
	         android:textColor="#505050"
	         android:hint="请输入验证码"
	         android:singleLine="true"
	          >

	     </EditText>
	     <ImageView 
	         android:background="#CCCCCC"
	         android:layout_height="1dp"
	         android:layout_width="match_parent"
	         android:layout_alignParentBottom="true"/>

	     <Button
	         android:id="@+id/psl_get_identifying_code"
	         android:layout_width="120dp"
	         android:background="@drawable/ok_button"
	         android:paddingTop="10dp"
	         android:paddingBottom="10dp"
	         android:layout_height="wrap_content"
	         android:layout_centerVertical="true"
	         android:layout_alignParentRight="true"
	         android:layout_marginRight="10dp"
	         android:textColor="#FFFFFF"
	         android:text="获取验证码"
	         android:textSize="16sp" />

	 </RelativeLayout>
	 	 <RelativeLayout
	     android:layout_width="match_parent"
	     android:layout_height="50dp" >

	     <TextView
	         android:id="@+id/textView3"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_centerVertical="true"
	         android:layout_marginLeft="15dp"
	         android:text="新密码:"
	         android:textColor="#505050"
	         android:textSize="16sp" />

	     <EditText
	         android:id="@+id/editText3"
	         android:background="@layout/edittextwhihoutcorner"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
			 android:layout_toRightOf="@+id/textView3"
	         android:hint="请输入新密码"
	         android:textColor="#505050"
	         android:singleLine="true"
	         android:inputType="textPassword"
	         android:layout_centerVertical="true"
	         android:ems="10" >
	     </EditText>
	     <ImageView 
	         android:background="#CCCCCC"
	         android:layout_height="1dp"
	         android:layout_width="match_parent"
	         android:layout_alignParentBottom="true"/>
	 </RelativeLayout>
<!-- 这里要先写相对布局再添加按钮，在布局中缩进，不然可能出现按钮无法缩进 -->
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="30dp"
	    android:padding="10dp" >

	    <Button
	    android:background="@drawable/ok_button"
        android:id="@+id/continue1"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:text="确       认"
        android:textSize="18sp"
        android:textColor="#ffffff" />
	</RelativeLayout>
</LinearLayout>
