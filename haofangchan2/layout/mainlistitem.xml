<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingLeft="8dp"
    android:paddingRight="15dp"
    android:orientation="horizontal" 
    android:background="#DBDBDB">
    <ImageView 
        android:id="@+id/house_view"
        android:layout_width="120dp"
        android:layout_height="fill_parent"
        android:src="@drawable/showingsn1x"/>
	<TextView 
	    android:id="@+id/top"
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:textColor="#CE0000"
	    android:text="Top"
	    />
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <TextView 
	        android:id="@+id/title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#97CBFF"
	        android:text="XX楼盘"/>		<LinearLayout 
		    android:layout_marginTop="5dp"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <TextView 
		        android:id="@+id/shitingwei"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="12sp"
		        android:textColor="#000000"
		        android:text="3室2厅1卫"/>
		    <TextView 
		        android:id="@+id/area"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:textSize="12sp"
		        android:textColor="#000000"
		        android:text="面积128㎡"/>
		</LinearLayout>	
		<LinearLayout 
		    android:layout_marginTop="5dp"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <TextView 
		        android:id="@+id/decorrate"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="12sp"
		        android:textColor="#000000"
		        android:text="精装修"/>
		    <TextView 
		        android:id="@+id/sendarea"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:textSize="12sp"
		        android:textColor="#000000"
		        android:text="赠送面积：12㎡"/>
		</LinearLayout>
		<LinearLayout 
		    android:layout_marginTop="5dp"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <TextView 
		        android:id="@+id/floorth"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="12sp"
		        android:textColor="#000000"
		        android:text="楼层：9/18层"/>
		    <TextView 
		        android:id="@+id/direction"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:textSize="12sp"
		        android:textColor="#000000"
		        android:text="南北"/>
		</LinearLayout>
		<RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="20dp"
		    android:paddingTop="5dp"
		    android:paddingBottom="5dp"
		    android:paddingRight="25dp">
		    <Button
			    android:id="@+id/moreinfo_button"
			    android:layout_width="wrap_content"
			    android:layout_height="20dp"
			    android:singleLine="true"
			    android:background="@drawable/moreinfo_buttonview"
			    android:text="点击查看详细信息>>"
			    android:textSize="12sp"
			    android:textColor="#000000" />
		</RelativeLayout>

	</LinearLayout>
</LinearLayout>
