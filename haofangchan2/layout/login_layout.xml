<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#005B97"
    android:orientation="vertical">
	<RelativeLayout 
	    android:id="@+id/fir"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:layout_alignParentTop="true"
	    android:layout_above="@+id/fillin"
	    >

	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="50dp"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:src="@drawable/yijulogo" />

	</RelativeLayout>
    <LinearLayout 
        android:id="@+id/fillin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
        <RelativeLayout 
        android:id="@+id/ed_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText 
            android:id="@+id/ed_username"
            android:hint="请输入账号/手机号"
            android:singleLine="true"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_view"
            android:textColor="#505050"
            android:drawableLeft="@drawable/user1"
            android:drawablePadding="10dp"
            android:paddingLeft="10dp"
            />

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ed_username"
            android:background="@drawable/bottomedit_view"
            android:drawableLeft="@drawable/pass1"
            android:drawablePadding="10dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#505050" />

    </RelativeLayout>
	<Button 
	    android:id="@+id/login_button"
	    android:layout_below="@+id/ed_rela"
	    android:layout_marginTop="40dp"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:text="登          录"
	    android:textSize="20sp"
	    android:clickable="true"
	    android:onClick="onClick"
	    android:textColor="#FFFFFF"
	    android:background="@drawable/login_buttonview"
	    />
	<Button 
	    android:id="@+id/walk_button"
	    android:layout_below="@+id/login_button"
	    android:layout_marginTop="20dp"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:onClick="onClick"
	    android:clickable="true"
	    android:text="关于我们"
	    android:textSize="20sp"
	    android:textColor="#009393"
	    android:background="@drawable/walk_buttonview"/>
	<RelativeLayout 
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/walk_button"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    <TextView 
	        android:id="@+id/forget_password"
	        android:text="忘记密码？"
	        android:textColor="#FFFFFF"
	        android:clickable="true"
	        android:onClick="onClick"
	        android:layout_alignParentLeft="true"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	    <TextView 
	        android:id="@+id/new_customer"
	        android:layout_alignParentRight="true"
	        android:text="新用户注册"
	        android:clickable="true"
	        android:onClick="onClick"
	        android:textColor="#FFFFFF"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"/>
	</RelativeLayout>
    </LinearLayout>
    
	
</RelativeLayout>
