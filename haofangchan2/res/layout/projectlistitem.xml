<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/comment_list"
    android:padding="10dp" >
    <ImageView 
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:src="@drawable/profile_image"
        android:id="@+id/projectitem_img"/>
	<TextView 
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:id="@+id/projectitem_title"
	    android:text="我是标题"
	    android:textSize="18sp"
	    android:layout_toRightOf="@+id/projectitem_img"
	    android:layout_marginLeft="10dp"/>
	<TextView 
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    android:id="@+id/projectitem_text"
	    android:text="i am the content"
	    android:textSize="15sp"
	    android:layout_toRightOf="@+id/projectitem_img"
	    android:layout_marginLeft="10dp"
		android:layout_below="@+id/projectitem_title"
		android:layout_marginTop="5dp"/>
</RelativeLayout>
