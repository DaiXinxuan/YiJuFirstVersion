<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFFF">
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="#005b97"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:paddingLeft="5dp"
	    android:paddingRight="5dp">
	    <ImageView 
	        android:id="@+id/goback"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/tuoyuan4"
			android:layout_centerVertical="true"
	        />
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:layout_centerInParent="true"
	        android:text="团购详情"
	        android:textColor="#ffffff"
	        android:textSize="20sp" />
    </RelativeLayout>
	<ImageView 
        android:id="@+id/top_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/background1x"
        />
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="0dp"
	    android:orientation="horizontal"
	    >
	    <RelativeLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:paddingTop="25dp"
	        android:paddingBottom="25dp"
	        android:background="@drawable/linear_background">
	        <RelativeLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true">
	        	<LinearLayout 
	            android:id="@+id/test1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            >
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="一房团购"
		            android:textColor="#000000"
		            android:textSize="20sp"/>
	            <TextView 
	                android:id="@+id/oneroom_person"
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="53人已报名"
		            android:textColor="#000000"
		            android:textSize="12sp"
		            />
	        </LinearLayout>
	        <Button 
		            android:id="@+id/one_logi"
		            android:layout_marginLeft="10dp"
		            android:layout_toRightOf="@+id/test1"
		            android:layout_centerVertical="true"
		            android:layout_width="50dp"
		            android:layout_height="30dp"
		            android:text="报名"
		            android:textColor="#FFFFFF"
		            android:background="@drawable/phone_button"/>
	        </RelativeLayout>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:paddingTop="25dp"
	        android:paddingBottom="25dp"
	        android:background="@drawable/linear_background">
	        <RelativeLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true">
	        	<LinearLayout 
	            android:id="@+id/test2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            >
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="二房团购"
		            android:textColor="#000000"
		            android:textSize="20sp"/>
	            <TextView 
	                android:id="@+id/tworoom_person"
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="53人已报名"
		            android:textColor="#000000"
		            android:textSize="12sp"
		            />
	        </LinearLayout>
	        <Button 
		            android:id="@+id/two_logi"
		            android:layout_marginLeft="10dp"
		            android:layout_toRightOf="@+id/test2"
		            android:layout_centerVertical="true"
		            android:layout_width="50dp"
		            android:layout_height="30dp"
		            android:text="报名"
		            android:textColor="#FFFFFF"
		            android:background="@drawable/phone_button"/>
	        </RelativeLayout>
	    </RelativeLayout>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <RelativeLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:paddingTop="25dp"
	        android:paddingBottom="25dp"
	        android:background="@drawable/linear_background">
	        <RelativeLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true">
	        	<LinearLayout 
	            android:id="@+id/test3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            >
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="三房团购"
		            android:textColor="#000000"
		            android:textSize="20sp"/>
	            <TextView 
	                android:id="@+id/threeroom_person"
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="53人已报名"
		            android:textColor="#000000"
		            android:textSize="12sp"
		            />
	        </LinearLayout>
	        <Button 
		            android:id="@+id/three_logi"
		            android:layout_marginLeft="10dp"
		            android:layout_toRightOf="@+id/test3"
		            android:layout_centerVertical="true"
		            android:layout_width="50dp"
		            android:layout_height="30dp"
		            android:text="报名"
		            android:textColor="#FFFFFF"
		            android:background="@drawable/phone_button"/>
	        </RelativeLayout>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:paddingTop="25dp"
	        android:paddingBottom="25dp"
	        android:background="@drawable/linear_background">
	        <RelativeLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true">
	        	<LinearLayout 
	            android:id="@+id/test4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            >
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="四房团购"
		            android:textColor="#000000"
		            android:textSize="20sp"/>
	            <TextView 
	                android:id="@+id/fourroom_person"
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="53人已报名"
		            android:textColor="#000000"
		            android:textSize="12sp"
		            />
	        </LinearLayout>
	        <Button 
		            android:id="@+id/four_logi"
		            android:layout_marginLeft="10dp"
		            android:layout_toRightOf="@+id/test4"
		            android:layout_centerVertical="true"
		            android:layout_width="50dp"
		            android:layout_height="30dp"
		            android:text="报名"
		            android:textColor="#FFFFFF"
		            android:background="@drawable/phone_button"/>
	        </RelativeLayout>
	    </RelativeLayout>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    >
	    <RelativeLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:paddingTop="25dp"
	        android:paddingBottom="25dp"
	        android:background="@drawable/linear_background">
	        <RelativeLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true">
	        	<LinearLayout 
	            android:id="@+id/test5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            >
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="五房团购"
		            android:textColor="#000000"
		            android:textSize="20sp"/>
	            <TextView 
	                android:id="@+id/fiveroom_person"
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="53人已报名"
		            android:textColor="#000000"
		            android:textSize="12sp"
		            />
	        </LinearLayout>
	        <Button 
		            android:id="@+id/five_logi"
		            android:layout_marginLeft="10dp"
		            android:layout_toRightOf="@+id/test5"
		            android:layout_centerVertical="true"
		            android:layout_width="50dp"
		            android:layout_height="30dp"
		            android:text="报名"
		            android:textColor="#FFFFFF"
		            android:background="@drawable/phone_button"/>
	        </RelativeLayout>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:paddingTop="25dp"
	        android:paddingBottom="25dp"
	        android:background="@drawable/linear_background">
	        <RelativeLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true">
	        	<LinearLayout 
	            android:id="@+id/test6"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            >
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="  其他     "
		            android:textColor="#000000"
		            android:textSize="20sp"/>
	            <TextView 
	                android:id="@+id/sixroom_person"
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="53人已报名"
		            android:textColor="#000000"
		            android:textSize="12sp"
		            />
	        </LinearLayout>
	        <Button 
		            android:id="@+id/six_logi"
		            android:layout_marginLeft="10dp"
		            android:layout_toRightOf="@+id/test6"
		            android:layout_centerVertical="true"
		            android:layout_width="50dp"
		            android:layout_height="30dp"
		            android:text="报名"
		            android:textColor="#FFFFFF"
		            android:background="@drawable/phone_button"/>
	        </RelativeLayout>
	    </RelativeLayout>
	</LinearLayout>
	
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="100dp"
	        android:background="@drawable/linear_background">

	        <ImageView
	            android:layout_width="165dp"
	            android:layout_height="80dp"
	            android:scaleType="fitCenter"
	            android:src="@drawable/groupinfocar" />

	        <LinearLayout 
	            android:id="@+id/test7"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="30dp"
	            android:layout_weight="2"
	            android:orientation="vertical"
	            >
	            <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="车位团购"
		            android:textColor="#000000"
		            android:textSize="20sp"/>
	            <TextView 
	                android:id="@+id/sevenroom_person"
	                android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="5dp"
		            android:layout_marginLeft="5dp"
		            android:text="53人已报名"
		            android:textColor="#000000"
		            android:textSize="12sp"
		            />
	        </LinearLayout>
	        <Button 
		            android:id="@+id/seven_logi"
		            android:layout_gravity="center_vertical"
		            android:layout_width="50dp"
		            android:layout_height="30dp"
		            android:layout_marginRight="5dp"
		            android:text="报名"
		            android:textColor="#FFFFFF"
		            android:background="@drawable/phone_button"/>
	 </LinearLayout>
</LinearLayout>
