<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.amap.api.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.amap.api.maps.MapView>
    <RelativeLayout
        android:id="@+id/map_navi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#005b97"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/map_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/tuoyuan4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="地图"
            android:textColor="#ffffff"
            android:textSize="20sp" >
        </TextView>
    </RelativeLayout>

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/map_navi"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#e0ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/map01" />

            <ImageView
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#e0ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/map02" />

            <ImageView
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#e0ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/map03" />

            <ImageView
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#e0ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/map04" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#e0ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/map05" />

            <ImageView
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#e0ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/map06" />

            <ImageView
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#e0ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/map07" />

            <ImageView
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#e0ffffff"
                android:scaleType="fitCenter"
                android:src="@drawable/map08" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>